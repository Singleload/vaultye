generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("MANAGER") // "ADMIN" eller "MANAGER"
  isActive  Boolean  @default(true)      // Kan inaktiveras
  
  // Relation: En användare har många system
  // Cascade: Tar man bort användaren försvinner systemen
  systems   SystemObject[] 

  createdAt DateTime @default(now())
}

model SystemObject {
  id              String    @id @default(uuid())
  name            String
  description     String?
  ownerName       String
  ownerEmail      String
  ownerUsername   String?
  managerName     String?
  managerUsername String?
  resourceGroup   String?
  status          String    @default("ACTIVE")
  isArchived      Boolean   @default(false)

  // KOPPLING TILL USER (Login-kontot)
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  meetings        Meeting[]
  points          Point[]
  upgrades        Upgrade[]
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Meeting {
  id          String       @id @default(uuid())
  date        DateTime
  title       String
  agenda      String?      @db.Text
  summary     String?      @db.Text
  attendees   String[]
  
  systemId    String
  // UPPDATERAD: Cascade delete
  system      SystemObject @relation(fields: [systemId], references: [id], onDelete: Cascade)
  
  points      Point[]
  attachments Attachment[]
  createdAt   DateTime     @default(now())
}

model Point {
  id             String        @id @default(uuid())
  title          String
  description    String        @db.Text
  origin         String
  priority       String
  status         String        @default("NEW")
  relevance      Int?
  feasibility    String?
  benefit        String?       @db.Text
  risk           String?       @db.Text
  costEstimate   String?
  managerComment String?       @db.Text
  decision       String?
  decisionDate   DateTime?
  decisionBy     String?
  
  systemId       String
  // UPPDATERAD: Cascade delete
  system         SystemObject  @relation(fields: [systemId], references: [id], onDelete: Cascade)
  
  meetingId      String?
  meeting        Meeting?      @relation(fields: [meetingId], references: [id])
  
  action         Action?
  createdAt      DateTime      @default(now())
}

model Upgrade {
  id           String       @id @default(uuid())
  version      String
  title        String
  description  String       @db.Text
  releaseNotes String?      @db.Text
  plannedDate  DateTime?
  downtime     Boolean      @default(false)
  status       String       @default("PLANNED")
  decision     String?
  decisionDate DateTime?
  attachments  Attachment[]
  
  systemId     String
  // UPPDATERAD: Cascade delete
  system       SystemObject @relation(fields: [systemId], references: [id], onDelete: Cascade)
  
  createdAt    DateTime     @default(now())
}

model MagicLink {
  id          String   @id @default(uuid())
  token       String   @unique
  email       String
  expiresAt   DateTime
  contextType String
  contextId   String
  used        Boolean  @default(false)
}

model Action {
  id          String    @id @default(uuid())
  title       String
  description String?   @db.Text
  assignedTo  String?
  startDate   DateTime?
  dueDate     DateTime?
  status      String    @default("PENDING")
  notes       String?   @db.Text
  
  pointId     String?   @unique
  // UPPDATERAD: Cascade delete (Om punkten raderas, raderas åtgärden)
  point       Point?    @relation(fields: [pointId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime  @default(now())
}

model Attachment {
  id        String   @id @default(uuid())
  filename  String
  path      String
  mimeType  String
  
  meetingId String?
  // UPPDATERAD: Cascade delete
  meeting   Meeting? @relation(fields: [meetingId], references: [id], onDelete: Cascade)
  
  upgradeId String?
  // UPPDATERAD: Cascade delete
  upgrade   Upgrade? @relation(fields: [upgradeId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
}